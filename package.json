{
    "name": "@uncharted.software/grafer",
    "version": "0.2.0",
    "description": "Large graph renderer",
    "main": "build/lib/mod.js",
    "types": "build/types/src/mod.d.ts",
    "repository": "https://github.com/uncharted-aske/grafer.git",
    "author": "Uncharted Software",
    "license": "Apache-2.0",
    "type": "module",
    "files": [
        "build/dist",
        "build/lib",
        "build/types",
        "src/"
    ],
    "keywords": [
        "graph",
        "renderer",
        "remote"
    ],
    "scripts": {
        "build": "run-p build:all build:types",
        "build:all": "rollup --config --config-all",
        "build:dist": "rollup --config --config-dist",
        "build:dev": "rollup --config --config-dev",
        "build:lib": "rollup --config --config-lib",
        "build:types": "tsc --declaration --emitDeclarationOnly --skipLibCheck --outDir ./build/types",
        "clean": "run-p clean:**",
        "clean:build": "rimraf build",
        "clean:cache": "rimraf .rts2_cache",
        "develop": "yarn build:dev --watch --config-dev-server",
        "docs": "typedoc --out ./docs ./src --exclude 'node_modules/**/*' --mode file --includeVersion --stripInternal --skipLibCheck",
        "examples": "run-s examples:*",
        "examples:build": "rollup --config --config-dev",
        "examples:bundle": "rollup --config --config-examples",
        "lint": "eslint --config ./.eslintrc.cjs \"./{src,tests,examples}/**/*.{js,ts}\"",
        "test": "karma start --single-run --browsers ChromeHeadless karma.conf.cjs",
        "prepack": "run-s clean build test lint",
        "pre-push": "run-p pre-push:**",
        "pre-push:lint": "yarn lint",
        "pre-push:test": "yarn test",
        "watch": "run-p watch:*",
        "watch:scripts": "yarn build:all --watch",
        "watch:types": "yarn build:types --watch"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn pre-push"
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.1.0",
        "@rollup/plugin-replace": "^2.3.4",
        "@types/chai": "^4.2.14",
        "@types/chroma-js": "^2.1.3",
        "@types/mocha": "^8.2.0",
        "@types/resize-observer-browser": "^0.1.5",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "chai": "^4.2.0",
        "eslint": "^7.18.0",
        "eslint-config-esnext": "^4.1.0",
        "eslint-plugin-import": "^2.22.1",
        "globby": "^11.0.2",
        "glslify-import": "^3.1.0",
        "husky": "^4.3.8",
        "karma": "^6.0.2",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-mocha": "^2.0.1",
        "karma-mocha-reporter": "^2.2.5",
        "karma-rollup-preprocessor": "^7.0.5",
        "live-server": "^1.2.1",
        "mocha": "^8.2.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.38.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-glslify": "^1.2.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-typescript2": "^0.29.0",
        "tslib": "^2.1.0",
        "tweakpane": "^1.5.8",
        "typedoc": "^0.20.19",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@dekkai/data-source": "^0.2.0",
        "@dekkai/event-emitter": "^1.1.0",
        "chroma-js": "^2.1.0",
        "dekkai": "^0.3.6",
        "gl-matrix": "^3.3.0",
        "lit-element": "^2.4.0",
        "lit-html": "^1.3.0",
        "picogl": "git+https://github.com/darionco/picogl.js.git#local/aske-grafer",
        "potpack": "^1.0.1"
    }
}
